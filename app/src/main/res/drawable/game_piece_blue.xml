<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="oval">

            <gradient
                    android:angle="270"
                    android:centerColor="#8803DAC5"
                    android:centerX="50%p"
                    android:centerY="50%p"
                    android:endColor="#338d8d8d"
                    android:gradientRadius="75%p"
                    android:startColor="#FF000000"
                    android:type="radial" />

            <size
                    android:width="24dp"
                    android:height="24dp" />

        </shape>

    </item>

    <item>

        <rotate android:fromDegrees="180.0" android:toDegrees="0.0"
                android:pivotX="50%" android:pivotY="50%" android:drawable="@drawable/forward_arrow_red"/>

    </item>

</layer-list>